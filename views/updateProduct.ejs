
<div class="container">
  <div class="admin-welcome">
    <h1>Update Product</h1>
    <div class="div2">
      <a class="btn btn-secondary" href="/admin/adminPanal">Admin Panal</a>
    </div>
  </div>

  <%- include('./partials/messages.ejs') %>
  <form action="/admin/updateProduct" method="post" class="mt-3 mb-3">
    <div class="form-group">
      <label for="product title">Title</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="enter product name" value="<%= typeof title != 'undefined' ? title : '' %>">
    </div>

    <div class="form-group">
      <label for="background image source">Background Image</label>
      <input type="text" class="form-control" id="background_img_src" name="background_img_src" placeholder="enter background image path" value="<%= typeof background_img_src != 'undefined' ? background_img_src : '' %>">
    </div>

    <div class="form-group">
      <label for="cover image source">Cover Image</label>
      <input type="text" class="form-control" id="cover_img_src" name="cover_img_src" placeholder="enter cover image path" value="<%= typeof cover_img_src != 'undefined' ? cover_img_src : '' %>">
    </div>

    <div class="form-group">
      <label for="release date">Release Date</label>
      <input type="text" class="form-control" name="release_date" placeholder="enter release date" value="<%= typeof release_date != 'undefined' ? release_date : '' %>">
    </div>

    <div class="form-group">
      <label for="genre">Select Genre</label>
      <select multiple class="form-control" id="genre" name="genre">
        <option>Action</option>
        <option>Arcade</option>
        <option>Role Playing</option>
        <option>Shooter</option>
        <option>Racing</option>
        <option>Puzzle</option>
        <option>Strategy</option>
      </select>
    </div>


    <div class="form-group">
      <label for="platform">Select Platform</label>
      <select multiple class="form-control" id="platform" name="platform">
        <option>PlayStation 4</option>
        <option>Xbox One</option>
        <option>PlayStation 3</option>
        <option>Xbox 360</option>
        <option>PC</option>
        <option>Nintendo Switch</option>
        <option>Nintendo Wii U</option>
      </select>
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="text" class="form-control" id="rating" name="rating" placeholder="enter metacritic rating" value="<%= typeof rating != 'undefined' ? rating : '' %>">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="description"></textarea>
    </div>

    <div class="form-group">
      <label for="screenshot source">First ScreenShot</label>
      <input type="text" class="form-control"  name="screenShot_1" placeholder="enter first screenshot image path" value="<%= typeof screenShot_1 != 'undefined' ? screenShot_1 : '' %>">
    </div>

    <div class="form-group">
      <label for="screenshot source">Second ScreenShot</label>
      <input type="text" class="form-control"  name="screenShot_2" placeholder="enter second screenshot image path" value="<%= typeof screenShot_2 != 'undefined' ? screenShot_2 : '' %>">
    </div>

    <div class="form-group">
      <label for="screenshot source">Third ScreenShot</label>
      <input type="text" class="form-control"  name="screenShot_3" placeholder="enter third screenshot image path" value="<%= typeof screenShot_3 != 'undefined' ? screenShot_3 : '' %>">
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      <input type="text" class="form-control" id="price" name="price" placeholder="enter product price in BTD" value="<%= typeof price != 'undefined' ? price : '' %>">
    </div>

    <button type="submit" class="btn btn-primary btn-block">UPDATE PRODUCT</button>

  </form>
</div>
