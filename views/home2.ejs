<%- include('./partials/messages.ejs') %>


<div class="container mt-2">
  <div class="row">
    <% products.forEach(function(product){ %>
    <div class="col-lg-3 col-md-4">

      <div class="cards mb-3" style="width: 15rem; text-align : center;">
        <img class="card-img-top mt-3" style="width : 150px; height : 180px" src="/<%= product.cover_img_src %>" alt="Card image cap">
        <div class="card-body">
          <div class="card-title-div">
            <h5 class="card-title"><%= product.title %></h5>
          </div>
          <p class="card-text">Release Date : <%= product.release_date%></p>

          <a href="/products/<%= product._id %>" class="btn btn-primary btn-block">View Product</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>


